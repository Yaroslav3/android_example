<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue">


    <TextView
        android:id="@+id/txt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Salary"
        android:textSize="25dp"
        android:textColor="#FF0000"/>

    <Button
        android:id="@+id/btn_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="15dp"
        android:background="#4476a19e"
        android:text="OK" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_OK"
        android:layout_alignStart="@+id/btn_OK"
        android:layout_marginBottom="23dp"
        android:background="4476a19e"
        android:text="Clear" />

    <EditText
        android:id="@+id/int_Oclad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_text"
        android:layout_below="@+id/txt_text"
        android:ems="10"
        android:hint="оклад"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_text"
        android:layout_marginStart="31dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/int_Oclad"
        android:text="Оклад"
        tools:text="Оклад" />

    <EditText
        android:id="@+id/double_ball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/int_Oclad"
        android:layout_below="@+id/int_Oclad"
        android:ems="10"
        android:hint="приработок"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/double_ball"
        android:layout_alignBottom="@+id/double_ball"
        android:layout_alignStart="@+id/textView6"
        android:text="Приработок" />

    <EditText
        android:id="@+id/int_workDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/double_ball"
        android:layout_below="@+id/double_ball"
        android:ems="10"
        android:hint="рабочие дни"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/int_workDay"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginBottom="11dp"
        android:text="Рабочие дни"
        tools:text="Рабочие дни" />

    <EditText
        android:id="@+id/double_Sever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/int_workDay"
        android:layout_below="@+id/int_workDay"
        android:ems="10"
        android:hint="северный коэффициент"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/int_dayPol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/double_Sever"
        android:layout_below="@+id/double_Sever"
        android:ems="10"
        android:hint="дни в поле"
        android:inputType="number" />

    <EditText
        android:id="@+id/double_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_OK"
        android:layout_alignStart="@+id/int_dayPol"
        android:ems="10"
        android:textColor="#FF0000"
        android:hint="результат"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/double_Sever"
        android:layout_alignBottom="@+id/double_Sever"
        android:layout_alignStart="@+id/textView8"
        android:text="Северный коэффициент" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/int_dayPol"
        android:layout_alignBottom="@+id/int_dayPol"
        android:layout_alignStart="@+id/textView9"
        android:text="Дни в поле" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/double_res"
        android:layout_alignTop="@+id/btnClear"
        android:layout_marginStart="14dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

</RelativeLayout>